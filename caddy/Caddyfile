(tls) {
  tls nelhage@nelhage.com
  tls {
    dns googlecloud
#    ca https://acme-staging-v02.api.letsencrypt.org/directory
  }
  header / {
    Strict-Transport-Security "max-age=31557600"
    Expect-CT "enforce, max-age=31536000"
  }
}

(base) {
  import tls
  log stdout
}

(livegrep) {
  import base
  log stdout
  proxy / http://livegrep-nginx:80 {
    transparent
  }
}

beta.livegrep.com {
  import livegrep
}

livegrep.com {
  import livegrep
}

www.livegrep.com {
  import base
  redir https://livegrep.com/
}

crossme.app {
  import tls
  proxy / http://crossme:3000 {
    transparent
    websocket
  }
  log stdout {
    except /sockjs/
  }
}

www.crossme.app {
  import base
  redir https://crossme.app/
}

beta.crossme.app {
  import tls
  proxy / http://crossme-statics {
    transparent
    websocket
  }
  log stdout
}

nelhage.com {
  import base
  header / {
    Strict-Transport-Security "max-age=31557600; preload; includeSubDomains"
  }
  proxy / http://nelhage.com {
    transparent
  }
}

www.nelhage.com {
  import base
  redir https://nelhage.com/
}
